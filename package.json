{
  "name": "vue-express-web-app",
  "version": "1.0.0",
  "description": "vue and express web app",
  "main": "index.ts",
  "scripts": {
    "dev": "run-p start:server dev:client",
    "watch": "run-p watch:server watch:client",
    "start": "run-p start:server prod:client",
    "start:server": "cd ./server && npm run start",
    "dev:client": "cd ./client && npm run dev",
    "prod:client": "cd ./client && npm run production",
    "watch:server": "cd ./server && npm run watch",
    "watch:client": "cd ./client && npm run watch"
  },
  "author": "Stuart Haas",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
