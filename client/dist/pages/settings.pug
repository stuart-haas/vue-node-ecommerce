extends ../layout

block content
  nav.navbar.has-shadow
    div.navbar-start
      a(href="/").navbar-item.title.is-1 Sonar
    div.navbar-end
      div.navbar-item
        p=`You are logged in as ${data.user.username}`
      a(href="/account").navbar-item
        span.icon.is-large
          i.fas.fa-user-circle.fa-2x
      a(href="/logout").navbar-item
        span.icon.is-large
          i.fas.fa-sign-out-alt.fa-2x
  div.container.is-fluid.columns.is-fullheight
    aside.menu.section.column.is-2.is-narrow-mobile.is-fullheight.is-hidden-mobile
      p.menu-label General
      ul.menu-list
        li
          a(href="/dashboard") Dashboard
        li
          a(href="/account") Account
        li
          a(href="/settings").is-active Settings
    div.container.column.is-10
      section.section

block scripts
  script(type="text/javascript").