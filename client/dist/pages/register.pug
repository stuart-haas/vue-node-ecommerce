extends ../layout

block content
  div.container.is-fluid
    section.section
      nav.breadcrumb
        ul
          li
            a(href="#") Register
      div.columns.is-vcentered.is-centered.is-desktop
        div.column.is-half
          h1.title Regsiter
          form(action="/users/register", method="post")
            div.field
              label(for="username").label Username
              div.control
                input(type="text", placeholder="Username", name="username")#username.input
            div.field
              label(for="email").label Email
              div.control
                input(type="email", placeholder="Email", name="email")#email.input
            div.field
              label(for="password").label Password
              div.control
                input(type="password", placeholder="Password", name="password")#password.input
            div.field
              label(for="passwordConf").label Confirm Password
              div.control
                input(type="password", placeholder="Confirm Password", name="passwordConf")#passwordConf.input
            div.field
              div.control
                button(type="submit").button.is-link Regsiter
            a(href="/login").button Login